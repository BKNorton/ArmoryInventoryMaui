<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArmoryInventoryMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ArmoryInventoryMaui.Views"
    xmlns:local="clr-namespace:ArmoryInventoryMaui"
    Shell.FlyoutBehavior="Flyout"
    Title="ArmoryInventoryMaui"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.TitleColor="White">

    <FlyoutItem>

        <ShellContent
            Title="Inventory"
            ContentTemplate="{DataTemplate views:InventoryMainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Missions"
            ContentTemplate="{DataTemplate views:MissionsPage}"
            Route="MissionsPage" />

        <ShellContent
            Title="Retrans"
            ContentTemplate="{DataTemplate views:RetransPage}"
            Route="MissionsPage" />
    </FlyoutItem>
</Shell>
